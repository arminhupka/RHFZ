{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "jsx": "react-jsx",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "outDir": "dist",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,
      "noEmitOnError": true
    },
    "include": ["src"]
  }
  